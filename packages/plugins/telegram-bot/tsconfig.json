{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "target": "ES2022",
        "lib": ["ES2022"],
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "react-jsx"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/frontend/**/*"],
    "references": [
        { "path": "../../types" }
    ]
}
